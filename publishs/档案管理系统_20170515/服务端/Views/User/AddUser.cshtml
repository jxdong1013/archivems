@{
    ViewBag.Title = "新增用户";
    ViewBag.PageCode = "U002";
}
@model ContractMvcWeb.Models.Beans.User  


<div class="content" >
<h3>添加用户</h3>

@using(Html.BeginForm("AddUser","User")){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    var items = (List<SelectListItem>)ViewData["enableItems"];
    var userTypeItems = (List<SelectListItem>)ViewData["userTypeItems"];

    <table class="user_info_table">
        <tr>
                <td class="label_r">
                @Html.LabelFor(m=>m.username)
                </td>
                <td >
                 @Html.TextBoxFor(m => m.username, new {@class= "text_input w190" })
                </td>
            </tr>
                <tr>
                    <td class="label_r">@Html.LabelFor(m=>m.sex)</td>
                    <td>
                        @Html.TextBoxFor(m => m.sex, new {@class="text_input" })
                    </td>
                </tr>
        <tr>
                <td class="label_r">
                @Html.LabelFor(m=>m.password)
                   </td>
                <td> 
                @Html.PasswordFor(m=>m.password , new {@class= "text_input w190" })
                </td>
            </tr>
        <tr>
            <td class="label_r">
                @Html.LabelFor(m=>m.comfirmPassword)
                </td>
            <td>
            @Html.PasswordFor(m => m.comfirmPassword, new {@class= "text_input w190" })
             </td>
          </tr>  
      <tr>
          <td class="label_r">
                @Html.LabelFor(m=>m.enable)
              </td>
          <td>
              @Html.DropDownListFor( m=>m.enable , items  , new {@class= "text_input w190" })
          </td>
       </tr>
        <tr>
            <td class="label_r">
                @Html.LabelFor(m=>m.link ) 
                </td>
    <td>
            @Html.TextBoxFor(m=>m.link, new {@class= "text_input" })
            </td>
            </tr>
        <tr>
            <td class="label_r">
                @Html.LabelFor(m => m.address)
            </td>
            <td>
                @Html.TextBoxFor(m => m.address, new { @class="text_input"})
            </td>
        </tr>
        <tr>
            <td class="label_r">
                @Html.LabelFor(m=>m.usertype)
            </td>
            <td>
                @Html.DropDownListFor( m=> m.usertype, userTypeItems , new { @class= "text_input w190" })
            </td>
        </tr>
        <tr>
            <td class="label_r"></td>
            <td   style="padding:15px;">
                <input type="submit" value="添加" class="blue_btn button_90 mr20" />
             </td>
         </tr>
       </table>
}

    </div>