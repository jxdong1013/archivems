@model ContractMvcWeb.Models.LoginModel

@{
    ViewBag.Title = "登录";
}


<div class="logincontent">
    
    
    <div class="login-main">
    
    <div class="login_info">
               @using (@Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()   
                    
                    <div class="info_list">
                        <div class="login_form_row"><label class="input_info">用户名:</label>
                            <p class="login_form_input">
                                
                                @Html.TextBoxFor(m => m.UserName, new {  id="userName", name="username" , @class="login_form_input_ipt"})                                
                                <i class="ico_uid"></i>
                            </p>
                        </div>
                        <div class="login_form_row"><label class="input_info">登录密码:</label>
                            <p class="login_form_input">  
                                 @Html.PasswordFor(m => m.Password, new { id="password", name="password" , @class="login_form_input_ipt"})                                                           
                                <i class="ico_pwd"></i>
                            </p>
                        </div>
