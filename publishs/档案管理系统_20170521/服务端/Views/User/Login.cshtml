                          <label class="input_info">一天内免登录</label>
                          <i class="ico_rememberMe"></i>
                        </div>*@
                     
                        <div class="login_form_row">
                            <input type="submit" accesskey="l" tabindex="3" class="login_form_btn" id="loginBtn" value="" title="登录">                            
                        </div>
                      @*  <div class="login_form_row">
                            <input type="button" class="login_form_reg" id="registerBtn" title="注册">
                        </div>*@
                    </div>
               }
