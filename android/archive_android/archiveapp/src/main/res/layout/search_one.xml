<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/search_one_rl"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <EditText
        android:id="@+id/search_one_text"
        android:background="@drawable/oranger_border_style"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="25dp"
        android:textColor="@color/black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        android:hint="商品搜索:请输入商品关键字"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/fa_search"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:id="@+id/search_one_search"
        android:layout_alignRight="@id/search_one_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>