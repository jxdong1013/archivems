<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jxd.archiveapp.fragments.LocationFragment">

    <RelativeLayout
        android:id="@+id/location_header"
        android:layout_width="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/location_lbl"
        android:layout_width="wrap_content"
        android:text="层架标签"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:text=""
        android:hint="请扫描层架标签"
        android:textColor="@color/blue"
        android:padding="5dp"
        android:textSize="16sp"
        android:layout_toRightOf="@id/location_lbl"
        android:layout_toLeftOf="@+id/location_operate"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:id="@+id/location_floor" />
    <TextView
        android:id="@+id/location_operate"
        android:textSize="26sp"
        android:layout_alignParentRight="true"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:textColor="@color/orangered"
        android:text="@string/fa_arrow_circle_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/location_line1"
        android:layout_below="@id/location_header"
        android:layout_width="match_parent"
        android:background="@color/lightgraylight"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/location_boxinfo"
        android:layout_below="@id/location_line1"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="档案盒标签信息"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/location_boxs"
        android:layout_below="@id/location_boxinfo"
        android:layout_above="@+id/location_info"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
   <TextView
       android:id="@+id/location_info"
       android:background="@color/white"
       android:padding="6dp"
       android:visibility="gone"
       android:layout_alignParentBottom="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/location_nodata"
        android:layout_below="@id/location_line1"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/location_nodata_pic"
            android:text="@string/fa_comment_o"
            android:textSize="40sp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:textColor="@color/mediumpurple"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/location_nodata_tip"
            android:layout_marginRight="4dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/location_nodata_tip"
            android:text="请扫描档案盒标签"
            android:hint="请扫描档案盒标签"
            android:textSize="22sp"
            android:textColor="@color/mediumpurple"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
