<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/scan_header"
        android:layout_width="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content">
        <TextView
            android:text=""
            android:hint="请扫描层架标签"
            android:textColor="@color/blue"
            android:padding="5dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:id="@+id/scan_floor" />
    </RelativeLayout>
    <TextView
        android:id="@+id/scan_line1"
        android:layout_below="@id/scan_header"
        android:layout_width="match_parent"
        android:background="@color/lightgraylight"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/scan_boxinfo"
        android:layout_below="@id/scan_line1"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="档案盒标签信息"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/scan_boxs"
        android:layout_below="@id/scan_boxinfo"
        android:layout_above="@+id/scan_info"
        android:layout_width="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/scan_info"
        android:background="@color/white"
        android:padding="6dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>